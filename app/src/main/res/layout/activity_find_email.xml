<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootFindEmail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true"
    android:fontFamily="@font/pretendard">

    <!-- 공통 앱바 -->
    <include
        android:id="@+id/topAppBar"
        layout="@layout/view_top_appbar" />

    <!-- 내용 스크롤 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 안내 문구 -->
            <TextView
                android:id="@+id/tvGuide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가입 시 등록한 이름과\n전화번호를 입력해주세요."
                android:textColor="#222222"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:lineSpacingExtra="2dp"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="32dp" />

            <!-- 이름 라벨 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <!-- 이름 입력 -->
            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/outlined_button_white"
                android:padding="12dp"
                android:hint=""
                android:inputType="textPersonName"
                android:textColorHint="#9E9E9E"
                android:layout_marginBottom="16dp" />

            <!-- 전화번호 라벨 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화번호 (- 없이 입력)"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <!-- 전화번호 입력 -->
            <EditText
                android:id="@+id/editPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/outlined_button_white"
                android:padding="12dp"
                android:hint=""
                android:inputType="phone"
                android:textColorHint="#9E9E9E" />

            <!-- 전화번호 에러/안내 메시지 -->
            <TextView
                android:id="@+id/tvPhoneMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF6666"
                android:textSize="12sp"
                android:visibility="gone"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </ScrollView>

    <!-- 하단 '다음' 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="16dp"
        android:background="#FFFFFF">

        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="다음"
            android:textColor="#FFFFFF"
            android:background="@drawable/outlined_button_gray"
            android:enabled="false"/>
    </LinearLayout>

</LinearLayout>
