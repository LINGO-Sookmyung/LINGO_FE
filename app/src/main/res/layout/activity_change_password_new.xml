<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootNewPw"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true"
    android:fontFamily="@font/pretendard">

    <!-- 공통 앱바 -->
    <include
        android:id="@+id/topAppBar"
        layout="@layout/view_top_appbar" />

    <!-- 내용 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 제목 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="새 비밀번호를 입력해주세요."
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:gravity="center"
                android:layout_marginTop="64dp"
                android:layout_marginBottom="32dp" />

            <!-- 새 비밀번호 라벨 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새 비밀번호"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <!-- 새 비밀번호 입력 -->
            <RelativeLayout
                android:id="@+id/boxNewPw"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/outlined_button_white"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/editNewPw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@id/ivToggleNewPw"
                    android:background="@android:color/transparent"
                    android:inputType="textPassword"
                    android:padding="0dp"
                    android:textColor="#1D1B20" />

                <ImageView
                    android:id="@+id/ivToggleNewPw"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_eye"
                    android:contentDescription="@string/app_name" />
            </RelativeLayout>

            <!-- 새 비밀번호 확인 라벨 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새 비밀번호 확인"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <!-- 새 비밀번호 확인 입력 -->
            <RelativeLayout
                android:id="@+id/boxConfirmPw"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/outlined_button_white"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <EditText
                    android:id="@+id/editNewPwConfirm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@id/ivToggleConfirmPw"
                    android:background="@android:color/transparent"
                    android:inputType="textPassword"
                    android:padding="0dp"
                    android:textColor="#1D1B20"
                    android:textColorHint="#9E9E9E" />

                <ImageView
                    android:id="@+id/ivToggleConfirmPw"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_eye"
                    android:contentDescription="@string/app_name" />
            </RelativeLayout>

            <!-- 불일치 메시지 -->
            <TextView
                android:id="@+id/tvConfirmMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호가 일치하지 않습니다."
                android:textSize="12sp"
                android:textColor="#FF6666"
                android:visibility="gone"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </ScrollView>

    <!-- 하단 고정 바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="@drawable/outlined_button_blue"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless">

            <TextView
                android:id="@+id/btnDone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="완료"
                android:textSize="16sp"
                android:textColor="#FFFFFF" />

            <ImageView
                android:id="@+id/btnNextArrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
