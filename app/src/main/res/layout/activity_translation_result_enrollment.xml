<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#FFFFFF"
    android:fontFamily="@font/pretendard">

    <!-- 상단 앱바 -->
    <include
        android:id="@+id/topAppBar"
        layout="@layout/view_top_appbar" />

    <!-- 내용 스크롤 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="24dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 안내 문구 -->
            <TextView
                android:id="@+id/tvGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자동 인식된 번역입니다.\n오류가 있을 수 있으니 꼭 확인 후 수정해 주세요."
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="24dp" />

            <!-- 문서 발행일 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="문서 발행일"
                android:textSize="12sp"
                android:textColor="#666666" />

            <LinearLayout
                android:id="@+id/layoutIssueDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/outlined_button_white"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/editIssueDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="YYYY-MM-DD"
                    android:inputType="text"
                    android:background="@null"
                    android:textColor="#000000"
                    android:padding="0dp" />
            </LinearLayout>

            <!-- 성명 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성명"
                android:textSize="12sp"
                android:textColor="#666666" />

            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hong Gil Dong"
                android:background="@drawable/outlined_button_white"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:inputType="textPersonName" />

            <!-- 생년월일 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생년월일"
                android:textSize="12sp"
                android:textColor="#666666" />

            <EditText
                android:id="@+id/editBirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="2000-01-01"
                android:background="@drawable/outlined_button_white"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:inputType="date" />

            <!-- 소속 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소속"
                android:textSize="12sp"
                android:textColor="#666666" />

            <EditText
                android:id="@+id/editDept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="IT Engineering"
                android:background="@drawable/outlined_button_white"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:inputType="textCapWords" />

            <!-- 학년 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="학년"
                android:textSize="12sp"
                android:textColor="#666666" />

            <EditText
                android:id="@+id/editGrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="4"
                android:background="@drawable/outlined_button_white"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:inputType="number" />

            <!-- 대학명 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대학명"
                android:textSize="12sp"
                android:textColor="#666666" />

            <EditText
                android:id="@+id/editUniversity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sookmyung Women's University"
                android:background="@drawable/outlined_button_white"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:inputType="textCapWords" />

        </LinearLayout>
    </ScrollView>

    <!-- 하단 고정 바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="16dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="@drawable/outlined_button_blue"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless">

            <TextView
                android:id="@+id/btnNextText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="문서 생성"
                android:textSize="16sp"
                android:textColor="#FFFFFF" />

            <ImageView
                android:id="@+id/btnNextArrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
