<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:fontFamily="@font/pretendard">

    <!-- 상단 영역: 비로그인= 회원가입/로그인, 로그인= 로그아웃 -->
    <LinearLayout
        android:id="@+id/topAuthBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp">

        <!-- 비로그인일 때만 보임 -->
        <TextView
            android:id="@+id/tvGoSignup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:text="회원가입"
            android:textColor="#888888"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvDivider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="12sp"
            android:textColor="#C0C0C0"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvGoLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:textSize="12sp"
            android:textColor="#888888"
            android:padding="8dp"
            android:visibility="gone"/>

        <!-- 로그인일 때만 보임 -->
        <TextView
            android:id="@+id/tvLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그아웃"
            android:textSize="12sp"
            android:textColor="#888888"
            android:padding="8dp"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- 위쪽 공간 -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- 로고 -->
    <ImageView
        android:id="@+id/logo_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_logo"
        android:contentDescription="@string/app_name"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp" />

    <!-- 메뉴 박스 컨테이너: 회색 배경이 좌우 끝까지, 내부는 패딩 16dp -->
    <LinearLayout
        android:id="@+id/menuContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F1F3F7"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="24dp"
        android:paddingEnd="16dp"
        android:paddingBottom="24dp"
        android:layout_marginBottom="0dp">

        <TextView
            android:id="@+id/family_cert"
            style="@style/CertBox"
            android:text="가족관계증명서"
            android:background="@drawable/outlined_button_selector"
            android:layout_marginBottom="24dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/enrollment_cert"
            style="@style/CertBox"
            android:text="재학증명서"
            android:background="@drawable/outlined_button_selector"
            android:layout_marginBottom="24dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/property_cert"
            style="@style/CertBox"
            android:text="부동산등기부등본 - 건물"
            android:background="@drawable/outlined_button_selector"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- 하단 네비게이션: 홈=검정, 마이페이지=회색 -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF">

        <LinearLayout
            android:id="@+id/tabHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iconHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home" />

            <TextView
                android:id="@+id/textHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="홈"
                android:textSize="12sp"
                android:textColor="#888888"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabMy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iconMy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mypage" />

            <TextView
                android:id="@+id/textMy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="마이페이지"
                android:textSize="12sp"
                android:textColor="#000000"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
