<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- 공통 앱바 -->
    <include
        android:id="@+id/topAppBar"
        layout="@layout/view_top_appbar" />

    <!-- 스크롤 컨텐츠 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">

        <LinearLayout
            android:id="@+id/rootLogin"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 로고 이미지 -->
            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_logo"
                android:contentDescription="@string/app_name"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp" />

            <!-- 이메일 -->
            <EditText
                android:id="@+id/editEmail"
                android:hint="이메일 주소"
                android:inputType="textEmailAddress"
                android:textColorHint="#797979"
                android:background="@drawable/outlined_button_white"
                android:fontFamily="@font/pretendard"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" />

            <!-- 비밀번호 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editPassword"
                    android:hint="비밀번호"
                    android:inputType="textPassword"
                    android:textColorHint="#797979"
                    android:background="@drawable/outlined_button_white"
                    android:fontFamily="@font/pretendard"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/ivTogglePassword"
                    android:src="@drawable/ic_eye"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
            </RelativeLayout>

            <!-- 로그인 에러 문구 -->
            <TextView
                android:id="@+id/tvLoginError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이메일 주소 또는 비밀번호를 잘못 입력하였습니다."
                android:textColor="#FF6666"
                android:textSize="12sp"
                android:fontFamily="@font/pretendard"
                android:visibility="gone"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="24dp"/>

            <!-- 하단 링크 -->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="48dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvFindEmail"
                    android:text="이메일 찾기"
                    android:textSize="12sp"
                    android:textColor="#797979"
                    android:padding="8dp"
                    android:fontFamily="@font/pretendard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="|"
                    android:textSize="12sp"
                    android:textColor="#797979"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvFindPassword"
                    android:text="비밀번호 찾기"
                    android:textSize="12sp"
                    android:textColor="#797979"
                    android:padding="8dp"
                    android:fontFamily="@font/pretendard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="|"
                    android:textSize="12sp"
                    android:textColor="#797979"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvSignUp"
                    android:text="회원가입"
                    android:padding="8dp"
                    android:textSize="12sp"
                    android:textColor="#797979"
                    android:fontFamily="@font/pretendard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- 로그인 버튼 -->
            <Button
                android:id="@+id/btnLogin"
                android:text="로그인"
                android:textColor="#FFFFFF"
                android:background="@drawable/outlined_button_blue"
                android:fontFamily="@font/pretendard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
