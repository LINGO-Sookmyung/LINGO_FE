<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootSignup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#FFFFFF"
    android:fontFamily="@font/pretendard">

    <!-- 상단 앱바 -->
    <include
        android:id="@+id/topAppBar"
        layout="@layout/view_top_appbar" />

    <!-- 내용 스크롤 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">

        <LinearLayout
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 큰 제목 -->
            <TextView
                android:text="회원가입"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- 이름 -->
            <TextView
                android:text="이름"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/editName"
                android:hint=""
                android:inputType="textPersonName"
                android:textColorHint="#9E9E9E"
                android:background="@drawable/outlined_button_white"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp" />

            <!-- 아이디(이메일) 라벨 + 문구(라벨 옆에 표시) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvEmailLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이디(이메일)"
                    android:textSize="12sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/tvEmailMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- 이메일 입력 + 중복확인 버튼 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/editEmail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint=""
                    android:inputType="textEmailAddress"
                    android:textColorHint="#9E9E9E"
                    android:background="@drawable/outlined_button_white"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:gravity="center_vertical" />

                <Button
                    android:id="@+id/btnCheckDup"
                    android:layout_width="88dp"
                    android:layout_height="match_parent"
                    android:minHeight="0dp"
                    android:layout_marginStart="8dp"
                    android:text="중복 확인"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/outlined_button_blue" />
            </LinearLayout>

            <!-- 비밀번호 -->
            <TextView
                android:text="비밀번호"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/editPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint=""
                    android:inputType="textPassword"
                    android:textColorHint="#9E9E9E"
                    android:padding="12dp"
                    android:background="@drawable/outlined_button_white" />

                <ImageView
                    android:id="@+id/ivTogglePassword"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_eye" />
            </RelativeLayout>

            <!-- 비밀번호 확인 라벨 + 불일치 문구 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvConfirmPasswordLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호 확인"
                    android:textSize="12sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/tvPasswordMismatch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호가 일치하지 않습니다."
                    android:textSize="12sp"
                    android:textColor="#FF6666"
                    android:layout_marginStart="8dp"
                    android:visibility="gone" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/editConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint=""
                    android:inputType="textPassword"
                    android:textColorHint="#9E9E9E"
                    android:padding="12dp"
                    android:background="@drawable/outlined_button_white" />

                <ImageView
                    android:id="@+id/ivToggleConfirmPassword"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_eye" />
            </RelativeLayout>

            <!-- 생년월일 라벨 + 문구(라벨 옆에 표시) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvBirthdayLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="생년월일"
                    android:textSize="12sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/tvBirthdayMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textSize="12sp"
                    android:textColor="#FF6666"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- 생년월일 입력칸-->
            <RelativeLayout
                android:id="@+id/layoutBirthday"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/editBirthday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint=""
                    android:focusable="false"
                    android:padding="12dp"
                    android:background="@drawable/outlined_button_white" />

                <ImageView
                    android:id="@+id/ivCalendar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_calendar" />
            </RelativeLayout>

            <!-- 전화번호 라벨 + 문구(라벨 옆에 표시) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvPhoneLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전화번호 (- 없이 입력)"
                    android:textSize="12sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/tvPhoneMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- 전화번호 입력 -->
            <EditText
                android:id="@+id/editPhone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint=""
                android:inputType="phone"
                android:textColorHint="#9E9E9E"
                android:padding="12dp"
                android:background="@drawable/outlined_button_white"
                android:layout_marginBottom="16dp" />

            <!-- 회원가입 버튼 -->
            <Button
                android:id="@+id/btnSignUp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="회원가입"
                android:textColor="#FFFFFF"
                android:background="@drawable/outlined_button_gray"
                android:enabled="false" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
